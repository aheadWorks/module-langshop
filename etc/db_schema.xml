<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="aw_ls_locale_scope"
           resource="default"
           engine="innodb"
           comment="AW Langshop Locale Scope Linkage Table">
        <column xsi:type="int"
                name="record_id"
                padding="10"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Record ID"
        />
        <column xsi:type="int"
                name="scope_id"
                unsigned="false"
                nullable="false"
                comment="Scope ID"
        />
        <column xsi:type="varchar"
                name="scope_type"
                nullable="false"
                length="32"
                comment="Scope Type"
        />
        <column xsi:type="varchar"
                name="locale_code"
                nullable="false"
                length="32"
                comment="Code of the Locale"
        />
        <column xsi:type="boolean"
                name="is_primary"
                nullable="false"
                comment="Is Primary Locale Flag"
        />
        <constraint xsi:type="primary"
                    referenceId="PRIMARY">
            <column name="record_id"/>
        </constraint>
        <index referenceId="AW_LS_LOCALE_SCOPE_RECORD_ID"
               indexType="btree">
            <column name="record_id"/>
        </index>
    </table>
</schema>
