<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Aheadworks\Langshop\Api\Data\LocaleInterface"
                type="Aheadworks\Langshop\Model\Locale"/>
    <preference for="Aheadworks\Langshop\Api\LocaleManagementInterface"
                type="Aheadworks\Langshop\Model\Service\Locale" />
    <preference for="Aheadworks\Langshop\Api\Data\SchemaInterface"
                type="Aheadworks\Langshop\Model\Schema"/>
    <preference for="Aheadworks\Langshop\Api\SchemaManagementInterface"
                type="Aheadworks\Langshop\Model\Service\Schema" />

    <!-- START Collection Modifier Pool -->
    <preference for="Aheadworks\Langshop\Model\ResourceModel\Collection\ModifierInterface"
                type="Aheadworks\Langshop\Model\ResourceModel\Collection\Modifier\Composite" />
    <!-- END Collection Modifier Pool -->

    <!-- START Data Processor Pool -->
    <preference for="Aheadworks\Langshop\Model\Data\ProcessorInterface"
                type="Aheadworks\Langshop\Model\Data\Processor\Composite" />
    <!-- END Data Processor Pool -->

    <!-- START Scope Record Configuration -->
    <preference for="Aheadworks\Langshop\Api\Data\Locale\Scope\RecordInterface"
                type="Aheadworks\Langshop\Model\Locale\Scope\Record"/>
    <preference for="Aheadworks\Langshop\Model\Locale\Scope\Record\SearchResultsInterface"
                type="Magento\Framework\Api\SearchResults" />
    <!-- END Scope Record Configuration -->

    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Aheadworks\Langshop\Api\Data\Locale\Scope\RecordInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="const">Aheadworks\Langshop\Model\ResourceModel\Locale\Scope\Record::MAIN_TABLE_NAME</item>
                    <item name="identifierField" xsi:type="const">Aheadworks\Langshop\Api\Data\Locale\Scope\RecordInterface::RECORD_ID</item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Aheadworks\Langshop\Model\Locale\LoadHandler">
        <arguments>
            <argument name="processor" xsi:type="object">Aheadworks\Langshop\Model\Locale\Processor\Composite</argument>
        </arguments>
    </type>
    <type name="Aheadworks\Langshop\Model\Locale\Processor\Composite">
        <arguments>
            <argument name="processorList" xsi:type="array">
                <item name="url" xsi:type="object">Aheadworks\Langshop\Model\Locale\Processor\Url</item>
            </argument>
        </arguments>
    </type>

    <type name="Aheadworks\Langshop\Model\Service\Schema">
        <arguments>
            <argument name="processor" xsi:type="object">Aheadworks\Langshop\Model\Schema\Processor\Composite</argument>
        </arguments>
    </type>
    <type name="Aheadworks\Langshop\Model\Schema\Processor\Composite">
        <arguments>
            <argument name="processorList" xsi:type="array">
                <item name="general" xsi:type="object">Aheadworks\Langshop\Model\Schema\Processor\General</item>
                <item name="translatable_resources" xsi:type="object">Aheadworks\Langshop\Model\Schema\Processor\TranslatableResources</item>
                <item name="translatable_resource_groups" xsi:type="object">Aheadworks\Langshop\Model\Schema\Processor\TranslatableResourceGroups</item>
            </argument>
        </arguments>
    </type>
    <type name="Aheadworks\Langshop\Model\Schema\Processor\General">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="version" xsi:type="string">1.0.0</item>
                <item name="possibilities" xsi:type="array">
                    <item name="locale.get" xsi:type="string"/>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Aheadworks\Langshop\Model\Entity\Field\Sorting\DirectionList">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="default" xsi:type="array">
                    <item name="asc" xsi:type="string"/>
                    <item name="desc" xsi:type="string"/>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Aheadworks\Langshop\Model\Schema\ResourceGroup\Pool">
        <arguments>
            <argument name="groupList" xsi:type="array">
                <item name="general" xsi:type="object">Aheadworks\Langshop\Model\Schema\TranslatableResourceGroup\General</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Aheadworks\Langshop\Model\Schema\TranslatableResourceGroup\General"
                 type="Aheadworks\Langshop\Model\Schema\TranslatableResourceGroup">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="id" xsi:type="string">1</item>
                <item name="title" xsi:type="string">General</item>
                <item name="sortOrder" xsi:type="string">1</item>
                <item name="resources" xsi:type="array"></item>
            </argument>
        </arguments>
    </virtualType>
</config>